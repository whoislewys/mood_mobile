{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules" : {
    "arrow-body-style" : "warn",
    "no-plusplus" : "off",
    "no-case-declarations" : "off",
    "no-underscore-dangle" : "off",
    "react/prop-types" : "off",
    "spaced-comment" : "warn",
    "prefer-destructuring": "warn"
  }
}
